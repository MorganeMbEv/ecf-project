{% extends 'base.html.twig' %}

{% block title %}Hello MenuCardController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> La carte</h1>
        <div>
            <h2>Menu du midi</h2>
                {% for category in categories %}
                    <h3>{{ category.name}}</h2>
                    {% for dish in dishesLunch %}
                        {% if dish.category == category.name %}
                            <p>{{ dish.title }}</p>
                        {% endif %}
                    {% endfor %}      
                {% endfor %} 
        </div>
        <div>
            <h2>Menu du soir</h2>
                {% for category in categories %}
                    <h3>{{ category.name}}</h2>
                    {% for dish in dishesDinner %}
                        {% if dish.category == category.name %}
                            <p>{{ dish.title }}</p>
                        {% endif %}
                    {% endfor %}      
                {% endfor %}
        </div>
</div>
{% endblock %}
